extends layout.pug

block title
  title= "Tags | " + site.title

block content
  article(class="tags archives page")
    header
      h1 Tags

      each file in files
        - title = file.title
        - posts = file.posts

        table(class= title.toLowerCase() + " tag archive")
          thead(id= title)
            tr: th= title
            
          tbody
            each post in posts
              tr
                td.post-title: a(href="/blog/" + post.slug)= post.title
                td.post-date= post.date
              
